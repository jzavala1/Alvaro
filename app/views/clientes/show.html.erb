<h1>Ver datos cliente</h1>
<br/>
<div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <label>Nombre</label>
        <%= @cliente.nombre %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <label>Apellido</label>
        <%= @cliente.apellido %>
      </div>
    </div>
</div>
<div class="row">
  <div class="col-lg-4">
    <div class="form-group">
      <label>Email</label>
      <%= @cliente.email %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <label>Teléfono</label>
        <%= @cliente.telefono %>
      </div>
    </div>
  </div>
    <div class="col-lg-4">
      <div class="form-group">
        <label>Dirección</label>
        <%= @cliente.direccion %>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="form-group">
        <label>Comuna</label>
        <%= @cliente.comuna %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div class="form-group">
        <label>RUT</label>
        <%= @cliente.rut %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-right">
      <%= link_to 'Clientes', clientes_path, class:"btn btn-default" %>
      <%= link_to 'Editar', edit_cliente_path(@cliente), class: "btn btn-success" %>
    </div>
  </div>


