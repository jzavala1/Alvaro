<div class="row">
  <div class="col-lg-12">
    <h2>Agregar Producto</h2>
  </div>
</div>
<br/>
<%= form_for(@producto) do |f| %>
    <% if @producto.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

          <ul>
            <% @producto.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
<form role="form">
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.label :categoria %>
        <%= f.select( :categoria, [['Infantil', 'Infantil']], include_blank: true) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :subcategoria %>
        <%= f.select( :subcategoria, [['Cuidado y Alimentación', 'Cuidado y Alimentación'], ['Juguetes', 'Juguetes'], ['Paseo y Viajes', 'Paseo y Viajes'], ['Ropa Niños', 'Ropa Niños'], ['Ropa Niñitas', 'Ropa Niñitas']], include_blank: true) %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :seccion %>
        <%= f.select( :seccion, [['Poleras niños', 'Poleras niños'], ['Coches', 'Coches'], ['Sillas para auto', 'Sillas para auto']], include_blank: true) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.label :nombre %>
        <%= f.text_field :nombre, class:"form-control", size:"10" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.label :observaciones %>
        <%= f.text_area :observaciones, type:"text", class:"form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10">
      <div class="form-group">
        <%= f.label :sku %>
        <%= f.text_field :sku, disabled:''%>
      </div>
    </div>
    <div class="col-lg-2">
      <div class="form-group">
        <label>Generar</label>
        <button type="button" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-refresh"></span></button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-right">
      <button class="btn btn-default">Cancelar</button>
      <button class="btn btn-success">Guardar</button>
    </div>
  </div>
</form>
<% end %>
