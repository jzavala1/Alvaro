<%= form_for @producto, remote: true, html: { class: "form-horizontal", style: "display:inline;" } do |f| %>
    <div class="modal-body">
      <ul class="errors"></ul>
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.label :categoria %>
            <div class="controls">
              <%= f.select( :categoria, [['Infantil', 'Infantil']], include_blank: true) %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <%= f.label :subcategoria %>
            <div class="controls">
              <%= f.select( :subcategoria, [['Cuidado y Alimentación', 'Cuidado y Alimentación'], ['Juguetes', 'Juguetes'], ['Paseo y Viajes', 'Paseo y Viajes'], ['Ropa Niños', 'Ropa Niños'], ['Ropa Niñitas', 'Ropa Niñitas']], include_blank: true) %>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <%= f.label :seccion %>
            <div class="controls">
              <%= f.select( :seccion, [['Poleras niños', 'Poleras niños'], ['Coches', 'Coches'], ['Sillas para auto', 'Sillas para auto']], include_blank: true) %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.label :nombre %>
            <div class="controls">
              <%= f.text_field :nombre, class:"form-control", size:"10" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.label :observaciones %>
            <div class="controls">
              <%= f.text_area :observaciones, type:"text", class:"form-control"%>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-10">
          <div class="form-group">
            <%= f.label :sku %>
            <div class="controls">
              <%= f.text_field :sku, disabled:''%>
            </div>
          </div>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <label>Generar</label>
            <button type="button" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-refresh"></span></button>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>
<% end %>
