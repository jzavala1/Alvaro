$("ul.errors").html("")
<% if @producto.errors.any? %>
<% @producto.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
<% end %>
<% else %>
$(".producto-index").html("<%= escape_javascript(render 'index') %>")
$("#producto-modal").modal("hide")
<% end %>