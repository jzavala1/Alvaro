<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:channel) %></dt>
      <dd><pre class="prettyprint"><%= @sale.channel %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:amount) %></dt>
      <dd><pre class="prettyprint"><%= @sale.amount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:client_id) %></dt>
      <dd><pre class="prettyprint"><%= @sale.client_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:shipping_id) %></dt>
      <dd><pre class="prettyprint"><%= @sale.shipping_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sales_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sale_path(@sale), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sale_path(@sale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>