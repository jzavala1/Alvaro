<%- model_class = Client -%>
<%- model_product = Product -%>
<div class="page-header">
  <h1>Productos de <%= @client.first_name %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>SKU</th>
      <th>Retiro</th>
      <th>Nombre</th>
      <th>Marca</th>
      <th>Precio</th>
      <th>Estado</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @client.products.each do |product| %>
      <tr>
        <td><%= product.sku %></td>
        <td><%= product.order.id %></td>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.price %></td>
        <td><%= product.status %></td>
        <td>
          <%= link_to edit_product_path(product) do %>
            <button class="btn btn-default btn-xs pull-right" type="button">
              <span class="glyphicon glyphicon-edit"></span>
            </button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

